<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="grioanpier.auth.users.movies.PlayFragment"
    android:padding="5dp"
   >
<grioanpier.auth.users.movies.utility.EditTextThreeWords

        android:id="@+id/story_edittext"
        android:inputType="textAutoCorrect"
        android:imeOptions="actionSend"
        android:enabled="false"
        android:textColorHighlight="@color/green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/edit_text"
        />

    <ListView
        android:id="@+id/story_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/story_edittext"
        />

</RelativeLayout>
