<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="grioanpier.auth.users.movies.PlayFragment"
    >

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Steal a turn"
        android:id="@+id/debug_button"
        />

    <grioanpier.auth.users.movies.utility.EditTextThreeWords
        
        android:id="@+id/story_edittext"
        android:inputType="textAutoCorrect"
        android:imeOptions="actionSend"
        android:enabled="false"
        android:textColorHighlight="@color/green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/edit_text"
        />

    <!-- android:layout_alignParentTop="true" -->
    <ListView
        android:id="@+id/story_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/story_edittext"

        android:layout_below="@id/debug_button"
        />

</RelativeLayout>
