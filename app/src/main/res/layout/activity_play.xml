<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="grioanpier.auth.users.movies.Play"
    tools:ignore="MergeRootFrame"
    android:background="@drawable/tiles_story"
    >


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Steal a turn"
        android:id="@+id/debug_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/goToChat"
        android:id="@+id/goToChat"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        />

    <fragment
        android:id="@+id/play_fragment"
        android:name="grioanpier.auth.users.movies.PlayFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_play"
        android:layout_below="@id/debug_button"
        />




    </RelativeLayout>
